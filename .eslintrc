{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "root": true,
  "plugins": [
    "flowtype",
    "jsx-control-statements"
  ],
  "globals": {
   "If": true,
   "Else": true,
   "For": true,
   "Choose": true,
   "When": true,
   "document": true,
   "Otherwise": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "modules": true,
      "arrowFunctions":true,
      "destructuring": true,
      "jsx": true
    }
  },
  "rules": {
    "flowtype/define-flow-type": 1,
    "flowtype/use-flow-type": 1,
    "import/prefer-default-export": 0,
    "import/no-named-as-default": 0,
    "import/no-unresolved": [2, { "ignore": ["^[~]"] }],

    "no-undef": 0,
    "new-cap": 0,
    "no-console": [2, { "allow": ["warn", "error"] }],

    "no-unused-vars": [2, { "argsIgnorePattern": "^_$", "varsIgnorePattern": "^_$" }],

    "react/default-props-match-prop-types": 0, // disabled until https://github.com/yannickcr/eslint-plugin-react/issues/1468
    "react/no-danger": 0,
    "react/no-unescaped-entities": 0,
    "react/prop-types": 0,
    "react/require-default-props": 0,
    "react/sort-comp": 0,
    "jsx-control-statements/jsx-for-require-each": 2,
    "jsx-control-statements/jsx-jcs-no-undef": 2,

    "import/extensions": [2, { "js": "never" }],

    "comma-dangle": [2, {
      "arrays": "always-multiline",
      "objects": "always-multiline",
      "imports": "always-multiline",
      "exports": "always-multiline",
      "functions": "ignore"
    }],

    "class-methods-use-this": 0,
    "consistent-return": 0,
    "arrow-parens": [2, "as-needed"],

    "global-require": 0,

    "react/jsx-filename-extension": ["error", { "extensions": [".js", ".jsx"] }],
    "react/jsx-no-undef": [2, { "allowGlobals": true }]
  },
  "env": {
    "jest": true,
    "jsx-control-statements/jsx-control-statements": true
  }
}

